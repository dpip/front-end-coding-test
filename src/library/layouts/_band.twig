{% set has_header = block( "band_header" ) is not empty %}
{% set has_body     = block( "band_body" ) is not empty %}
{% set has_footer   = block( "band_footer" ) is not empty %}

{# Break apart aside position values for better control of logic #}
{%- if has_header or has_body or has_footer -%}
    <section class="test-band--layout">
        <div class="test-band--container">
          {% if has_header %}
            <header class="test-band--header">
                {% block band_header %}{% endblock %}
                <h2 class="test-header-secondary">Consectetur <strong>adipisicing sit</strong><span>_</span></h2>
                <div class="test-button--component test-band--cta">
              		<a href="#" title="See back of card 1">
              			See why lorem ipsum sit
              		</a>
              	</div>
            </header>
          {% endif %}
          {% if has_body %}
            <div class="test-band--content">
                {% block band_body %}{% endblock %}
            </div>
          {% endif %}
          {% if has_footer %}
            <footer class="test-band--footer">
                        {% block band_footer %}{% endblock %}
            </footer>
          {% endif %}
        </div>
    </section>
{%- endif -%}
